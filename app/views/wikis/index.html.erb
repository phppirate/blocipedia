<h1>Listing wikis</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @wikis.each do |wiki| %>
  <% if !wiki.private %>
  <tr>
    <td><%= wiki.name %></td>
    <td><%= link_to wiki.description, wiki, class: "btn btn-link" %></td>
  </tr>
  <% end %>
<% end %>
</table>

<br />

<%= link_to new_wiki_path, class: "btn btn-primary" do %>
    <span class="glyphicon glyphicon-plus"></span> New Wiki
<% end %>
